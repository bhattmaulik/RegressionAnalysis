#----Packages----####
#Packages for modeling
library(AER)#For econometric functions
library(easystats)#For easy econometric modeling
#Packages for tables
library(gt)#grammar of tables
library(gtsummary)#easily prepare summary table for regression models
library(maulikbhatt)
#Packages for visualizations
library(ggforce)#add annotations in ggplots
library(ggrepel)#arrange text in ggplot better
library(ggthemes)#choose themes for ggplots
library(GGally)#to use ggpairs function
library(patchwork)#If you need to arrange ggplots together

#Package to load data
library(Gujarati5sie)#Datasets for the book "Basic Econometrics" by Damodar Gujarati and others

#Packages for documentation
library(knitr)#To use "kable" function
library(kableExtra)#To add extra functionality to tables

#Conflicts
#When a function name is used by two or more packages, Conflicted decides which package's function to use.
library(conflicted)
conflict_prefer("lag", "dplyr")
conflict_prefer("tidy", "broom")
conflict_prefer("augment","broom")

#Other packages would be loaded as and when required.

